PROJECT_NAME           = Comlin
PROJECT_BRIEF          = "A minimal C library that implements a command line with history for VT-100 compatible terminals."

QUIET                  = YES
WARN_AS_ERROR          = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_NO_PARAMDOC       = NO

JAVADOC_AUTOBRIEF      = YES

FULL_PATH_NAMES        = NO
CASE_SENSE_NAMES       = YES
HIDE_IN_BODY_DOCS      = YES
REFERENCES_LINK_SOURCE = NO

GENERATE_HTML          = YES
GENERATE_LATEX         = NO
GENERATE_XML           = NO
XML_PROGRAMLISTING     = NO
SHOW_FILES             = NO

EXPAND_ONLY_PREDEF     = YES
MACRO_EXPANSION        = YES
SKIP_FUNCTION_MACROS   = NO
PREDEFINED             = COMLIN_API=

STRIP_FROM_PATH        = @COMLIN_SRCDIR@
INPUT                  = @COMLIN_SRCDIR@/include/comlin/comlin.h

OUTPUT_DIRECTORY       = @DOX_OUTPUT@
